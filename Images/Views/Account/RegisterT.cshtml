@model Images.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>Account Register </title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Account Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <!--พื้นหลังขาว-->
  
    <link href="~/Content/css-Register/style1.css" rel="stylesheet" />
    <!--ภาพพื้นหลัง กับ ฟอนต์ ACCOUNT REGISTER FORM-->
    <link href="~/Content/css-Register/styleRe.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">

    <!-- //css files -->
</head>
<body>
    
        @using (Html.BeginForm("RegisterT", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

    <div class="w3ls-header">
        <br />
        <br />
        <div class="header-main">
            <h2>Create Account</h2>
            <div class="header-bottom">
                <div class="header-right w3agile">
                    <div class="header-left-bottom agileinfo">
                        <form action="#" method="post">
                            <div>
                                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                                <div class="icon1">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                <br />
                            </div>
                            <div>
                                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                                <div class="icon1">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })                               
                                </div>
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                <br />
                            </div>
                            <div>
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="icon1">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                <br />
                            </div>
                            <div>
                                @Html.LabelFor(m => m.BankName, new { @class = "col-md-2 control-label" })
                                <div class="icon1">
                                    @Html.TextBoxFor(m => m.BankName, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.BankName, "", new { @class = "text-danger" })
                                <br />
                            </div>
                            <div>
                                @Html.LabelFor(m => m.BankID, new { @class = "col-md-2 control-label" })
                                <div class="icon1">
                                    @Html.TextBoxFor(m => m.BankID, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.BankID, "", new { @class = "text-danger" })
                                <br />
                            </div>
                            <div>
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="icon1">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                <br />
                            </div>
                            <div>
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                <div class="icon1">

                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                <br />
                            </div>
                          @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                            <div class="bottom">
                                <input type="submit" value="Create account" />
                            </div>
                            <p>@Html.ActionLink("Back to Login", "LoginT")</p>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
         
        }
        <!--header end here-->

</body>
</html>

